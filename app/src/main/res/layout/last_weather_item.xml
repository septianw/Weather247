<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/last_weather_size"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/last_weather_margin"
    tools:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/ivIconWeather"
        android:layout_width="@dimen/image_normal"
        android:layout_height="@dimen/image_normal"
        android:contentDescription="@string/description_3"
        tools:src="@drawable/ic_thunderstorm_white" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/last_weather_margin"
        android:textColor="@color/white"
        android:textSize="@dimen/text_small"
        tools:text="20 Jan 2018" />

</LinearLayout>